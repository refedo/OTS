# Database Configuration
# Replace with your actual MySQL database connection string
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# Authentication
# Cookie name for session management
COOKIE_NAME="ots_session"

# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate a strong random string for production use
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-base64-32"

# Application URL
# Update this to your production URL when deploying
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Email Configuration (if implementing email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASSWORD="your-app-password"

# Optional: File Upload Configuration
# MAX_FILE_SIZE="10485760" # 10MB in bytes
# UPLOAD_DIR="./uploads"

# Optional: API Keys (if using external services)
# EXTERNAL_API_KEY="your-api-key-here"

# AI Assistant Configuration
# OpenAI API Key for AI Assistant module
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your-openai-api-key-here"

# Early Warning Engine Scheduler
# Set to "true" to enable automatic risk detection (runs every hour)
# Default: false in development, true in production
ENABLE_RISK_SCHEDULER="false"

# Dolibarr ERP Integration
# API URL for Dolibarr REST API (v22.0.1)
DOLIBARR_API_URL="https://www.hexametals.com/erp/api/index.php"
DOLIBARR_API_KEY="your-dolibarr-api-key-here"
DOLIBARR_API_TIMEOUT="30000"
DOLIBARR_API_RETRIES="3"

# Cron Secret for protected sync endpoint
# Generate with: openssl rand -hex 32
CRON_SECRET="your-cron-secret-here"
