# Hexa SteelÂ® OTS - Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
APP_VERSION=1.0.0
PORT=3000

# Database (Digital Ocean Managed MySQL)
DATABASE_URL="mysql://username:password@host:port/database?sslaccept=strict"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
COOKIE_NAME="ots_session_prod"

# Session Configuration
SESSION_TIMEOUT=86400000  # 24 hours in milliseconds

# Digital Ocean Spaces (Optional - for file uploads)
DO_SPACES_KEY=""
DO_SPACES_SECRET=""
DO_SPACES_ENDPOINT=""
DO_SPACES_BUCKET=""

# Email Configuration (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@hexasteel.com"

# Monitoring & Logging (Optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# Backup Configuration
BACKUP_RETENTION_DAYS=7
