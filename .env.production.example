# Hexa SteelÂ® OTS - Production Environment Configuration
# Deploy to: https://hexasteel.sa/ots
# Copy this file to .env on your server and fill in your actual values

# Application
NODE_ENV=production
APP_VERSION=1.0.0
PORT=3000

# Application URL - IMPORTANT for /ots subdirectory
NEXT_PUBLIC_APP_URL="https://hexasteel.sa/ots"
NEXT_PUBLIC_BASE_PATH="/ots"

# Database (Digital Ocean MySQL)
# Format: mysql://username:password@host:port/database
DATABASE_URL="mysql://ots_user:your_password@localhost:3306/ots_production"

# JWT Authentication - CHANGE THESE IN PRODUCTION!
# Generate: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
COOKIE_NAME="ots_session"

# Session Configuration
SESSION_TIMEOUT=86400000  # 24 hours in milliseconds

# Digital Ocean Spaces (Optional - for file uploads)
DO_SPACES_KEY=""
DO_SPACES_SECRET=""
DO_SPACES_ENDPOINT=""
DO_SPACES_BUCKET=""

# Email Configuration (Optional - for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@hexasteel.com"

# Monitoring & Logging (Optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# Backup Configuration
BACKUP_RETENTION_DAYS=7
